{
  "name": "mc-lightbox",
  "version": "1.0.0",
  "description": "A Vanilla JS Lightbox Gallery",
  "main": "dist/mc-lightbox.min.js",
  "scripts": {
    "build": "mkdir -p dist && npm run minify",
    "minify": "terser src/mc-lightbox.js -o dist/mc-lightbox.min.js && cleancss -o dist/mc-lightbox.min.css src/mc-lightbox.css"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/megancoyle/mc-lightbox.git"
  },
  "keywords": [
    "lightbox",
    "gallery",
    "vanilla-js",
    "npm-package"
  ],
  "author": "Megan Coyle",
  "license": "MIT",
  "devDependencies": {
    "clean-css-cli": "^5.6.3",
    "terser": "^5.31.6"
  }
}
